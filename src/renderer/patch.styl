html,
body
  overflow hidden
  height 100%

body
  margin 0
  padding 0

.root
  overflow-y scroll
  width 100%
  height 100%

.search-box
  position fixed
  top 0
  right 32px
  transform translateY(-31px)
  padding 4px 2px 4px 4px
  overflow hidden
  border 1px solid #878787
  border-top none
  border-radius 0 0 4px 4px
  background-color #DADBDA
  transition transform 0.15s ease-out
  &.is-shown
    transform translateY(0)
  .search
    display inline-block
    float left
    position relative
    width 216px
    height 22px
    font-size 14px
    input
      display inline-block
      width 167px
      padding 0 43px 0 4px
      line-height 20px
      background-color #ffffff
      border 1px solid #bbbbbd
      border-radius 4px 0 0 4px
      outline none
      &:focus
        padding 0 42px 0 3px
        line-height 18px
        border 2px solid #a8cbf7
    .index
      position absolute
      right 7px
      top 4px
      color #c9c9c9
  .controller
    float left
  button
    float left
    width 22px
    height 22px
    padding 0
    font-size 10px !important
    color #747474
    background none
    border none
    outline none
    &.button-up, &.button-down
      color #000
      background -moz-linear-gradient(top, #f2f2f2, #dad8d8)
      background -webkit-gradient(linear, left top, left bottom, from(#f2f2f2), to(#dad8d8))
      &:disabled
        color #747474
        background none
    &.button-up
      border-top 1px solid #c8c9c9
      border-right 1px solid #f3f4f2
      border-bottom 1px solid #c8c9c9
      &:disabled
        border-right 1px solid #DADBDA
    &.button-down
      width 23px
      border-top 1px solid #c8c9c9
      border-right 1px solid #c8c9c9
      border-bottom 1px solid #c8c9c9
      border-radius 0 4px 4px 0
    &.button-close
      color #868686
      border none
      background none
      width 14px
      height 14px
      margin-left 5px
      margin-top 4px
      margin-right 5px
      &:before
        display inline-block
      &:hover
        &:before
          width 12px
          height 12px
          color #fff
          border 1px solid #c35354
          border-radius 50%
          background #db8282

.body
  position relative

  .rail
    position absolute
    top 0
    right 0
    height 100%
    .mark
      position absolute
      top 10px
      right 0
      box-sizing border-box
      width 16px
      height 3px
      background #E6D580
      border 1px solid #E6C500

  .markdown-body
    padding 50px
    li
      &.checked
        &:before
          content "\f046"
      &.unchecked
        &:before
          content "\f096"
    .icon
      font normal normal normal 16px/1 octicons-anchor
      display inline-block
      text-decoration none
      text-rendering auto
      -webkit-font-smoothing antialiased
      -moz-osx-font-smoothing grayscale
      -webkit-user-select none
      -moz-user-select none
      -ms-user-select none
      user-select none
    .icon-link
      &:before
        content '\f05c'

  li
    & > p
      margin-top 0 !important
      margin-bottom 0 !important

  .markdown-body li.checked,
  .markdown-body li.unchecked
    list-style-type none
    position relative

  .markdown-body li.checked:before,
  .markdown-body li.unchecked:before
    font-family FontAwesome
    position absolute
    left -1.3em

  .markdown-body h1 .icon-link,
  .markdown-body h2 .icon-link,
  .markdown-body h3 .icon-link,
  .markdown-body h4 .icon-link,
  .markdown-body h5 .icon-link,
  .markdown-body h6 .icon-link
    display none
    color #000
    vertical-align middle

  .markdown-body h1:hover .anchor .icon-link,
  .markdown-body h2:hover .anchor .icon-link,
  .markdown-body h3:hover .anchor .icon-link,
  .markdown-body h4:hover .anchor .icon-link,
  .markdown-body h5:hover .anchor .icon-link,
  .markdown-body h6:hover .anchor .icon-link
    display inline-block
